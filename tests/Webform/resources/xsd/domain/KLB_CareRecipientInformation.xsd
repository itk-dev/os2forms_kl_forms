					</xsd:annotation>
					<xsd:complexType>
						<xsd:sequence>
							<xsd:element name="ShortDescription" type="xsd:string">
								<xsd:annotation>
									<xsd:documentation xml:lang="da">Kort beskrivelse</xsd:documentation>
								</xsd:annotation>
							</xsd:element>
							<xsd:element name="Attachment" type="xsd:hexBinary" minOccurs="0">
								<xsd:annotation>
									<xsd:documentation xml:lang="da">Vedlagt beskrivelse</xsd:documentation>
								</xsd:annotation>
							</xsd:element>
						</xsd:sequence>
					</xsd:complexType>
				</xsd:element>
				<xsd:element ref="klb:Practitioner">
